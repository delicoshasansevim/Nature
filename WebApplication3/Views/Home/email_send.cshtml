@model WebApplication3.Models.Person

@{
    ViewBag.Title = "email_send";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@ViewBag.message

<br />


<div id="email_send_wrapper">

    <br />
    <br />
    <br />

    <fieldset id="wrapper" style="margin-left:4%; border-radius:14px; ">
        <legend>Send E mail</legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false)

        @using (Html.BeginForm("email_send", "Home", FormMethod.Post, new { }))
        {

            <ul class="list1">
                <li>
                    @Html.LabelFor(Model => Model.Name)
                </li>
                <li>
                    @Html.TextBoxFor(Model => Model.Name, new { style = "margin-left:0; width:50%;", @Class = "nameClass myTextBox", id = "textbox1" })
                    @Html.ValidationMessageFor(Model => Model.Name)
                </li>
            </ul>


            <ul class="list1">
                <li>
                    @Html.LabelFor(Model => Model.EmailAdress)
                </li>
                <li>
                    @Html.TextBoxFor(Model => Model.EmailAdress, new { style = "margin-left:0; width:50%;", @Class = "nameClass myTextBox", id = "textbox2" })
                    @Html.ValidationMessageFor(Model => Model.EmailAdress)
                </li>
            </ul>


            <ul class="list1">
                <li>
                    @Html.LabelFor(Model => Model.EmailMessage)
                </li>
                <li>
                    @Html.TextAreaFor(Model => Model.EmailMessage, new { @class="myTextBox", style="width:100%; height:80px;" })
                    @Html.ValidationMessageFor(Model => Model.EmailMessage)
                </li>
            </ul>

            <ul class="list1">
                <li><input type="submit" name="submit1" value="submit" class="btn" style="margin-left:0;" />
</li>
            </ul>

            <br />
            <br />


            
        }

    </fieldset>

</div>


